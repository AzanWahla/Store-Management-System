<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UpdateItemScreen">
   <children>
      <TextField fx:id="id" layoutX="209.0" layoutY="111.0" promptText="Item ID to Change" />
      <Label fx:id="title" alignment="CENTER" layoutX="121.0" layoutY="43.0" prefHeight="62.0" prefWidth="375.0" text="Update Item Section">
         <font>
            <Font name="Baskerville Old Face" size="35.0" />
         </font>
      </Label>
      <TextField fx:id="NewItemID" layoutX="209.0" layoutY="145.0" promptText="New Item ID" />
      <TextField fx:id="NewItemName" layoutX="209.0" layoutY="181.0" promptText="New Item Name" />
      <TextField fx:id="NewItemPrice" layoutX="209.0" layoutY="219.0" promptText="New Item Price" />
      <TextField fx:id="NewItemQuantity" layoutX="209.0" layoutY="257.0" promptText="New Item Quantity" />
      <Label fx:id="itemType" alignment="CENTER" layoutX="197.0" layoutY="294.0" prefHeight="21.0" prefWidth="106.0" text="Item Type :">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <RadioButton fx:id="householdItem" layoutX="211.0" layoutY="315.0" mnemonicParsing="false" onAction="#HouseholdItem" text="Household" />
      <RadioButton fx:id="groceryItem" layoutX="301.0" layoutY="315.0" mnemonicParsing="false" onAction="#GroceryItem" text="Grocery" />
      <Button fx:id="addItem" layoutX="397.0" layoutY="353.0" mnemonicParsing="false" onAction="#AddItem" text="Add" />
      <Button fx:id="clear" layoutX="287.0" layoutY="353.0" mnemonicParsing="false" onAction="#clearScreen" text="Clear" />
      <Button fx:id="back" layoutX="177.0" layoutY="353.0" mnemonicParsing="false" onAction="#backScreen" text="Back" />
   </children>
</AnchorPane>
