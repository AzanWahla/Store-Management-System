<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AddEmployeeScreen">
   <children>
      <Label fx:id="title" alignment="CENTER" layoutX="121.0" layoutY="43.0" prefHeight="62.0" prefWidth="375.0" text="Add Employee Section">
         <font>
            <Font name="Baskerville Old Face" size="35.0" />
         </font>
      </Label>
      <TextField fx:id="employeeID" layoutX="225.0" layoutY="123.0" promptText="Employee ID" />
      <TextField fx:id="employeeName" layoutX="225.0" layoutY="162.0" promptText="Employee Name" />
      <TextField fx:id="employeeAddress" layoutX="225.0" layoutY="198.0" promptText="Employee Address" />
      <TextField fx:id="employeePhone" layoutX="225.0" layoutY="236.0" promptText="Employee Phone" />
      <RadioButton fx:id="manager" layoutX="225.0" layoutY="312.0" mnemonicParsing="false" onAction="#ManagerPosition" text="Manager" />
      <RadioButton fx:id="worker" layoutX="310.0" layoutY="312.0" mnemonicParsing="false" onAction="#WorkerPosition" prefHeight="17.0" prefWidth="69.0" text="Worker" />
      <Label fx:id="employeePostion" alignment="CENTER" layoutX="212.0" layoutY="284.0" prefHeight="21.0" prefWidth="149.0" text="Employee Position:">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Button fx:id="addEmployee" layoutX="426.0" layoutY="353.0" mnemonicParsing="false" onAction="#AddEmployee" text="Add" />
      <Button fx:id="clear" layoutX="278.0" layoutY="353.0" mnemonicParsing="false" onAction="#clearScreen" text="Clear" />
      <Button fx:id="back" layoutX="163.0" layoutY="353.0" mnemonicParsing="false" onAction="#backScreen" text="Back" />
   </children>
</AnchorPane>
